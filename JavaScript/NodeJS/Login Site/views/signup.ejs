<!doctype html>
<html>
<head>
    <title>Signup</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<!--link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"-->
    <link rel="stylesheet" href="/styles/global.css"/>
    <link rel="stylesheet" href="/styles/login.css"/>
    <link rel="shortcut icon" href="/resources/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/resources/favicon.ico" type="image/x-icon">
    <script src="/scripts/global.js"></script>
    <script src="/scripts/login.js"></script>
    <script src="/scripts/signup.js"></script>
</head>
<body>
    <div class="content">
        <div class="dialog">
            <form class="group" method="POST">
                <div class="inputs">
                    <div class="title">
                        Sign Up
                    </div>
                    <div class="input">
                        <label for="username" id="label-username">Username (a-Z, 0-9, _ only)</label>
                        <input type="text" id="username" name="username" minlength="6" maxlength="16" pattern="^[A-Za-z0-9_]+$" required>
                        <span class="bar"></span>
                    </div>
                    <div class="input">
                        <label for="password" id="label-password">Password (a-Z, 0-9, _!@#$%^&*+- only)</label>    
                        <input type="password" id="password" name="password" minlength="6" maxlength="32" pattern="^[A-Za-z0-9_.!@#$%^&*+-]+$" required>
                        <span class="bar"></span>
                    </div>
                    <div class="input">
                        <label for="password_confirm" id="label-password_confirm">Confirm Password</label>    
                        <input type="password" id="password_confirm" name="password_confirm" maxlength="32" pattern="^[A-Za-z0-9_.!@#$%^&*+-]+$" required>
                        <span class="bar" id="bar-password_confirm"></span>
                    </div>
                </div>
                <div class="buttons">
                    <input type="submit" name="signup" value="Sign Up" disabled></input>
                    <a href="./login"><button type="button" value="Log In">Log In</button></a>
                </div>
            </form>
        </div>
        <div class="toasts">
            <% if(message.length > 0){ %>
                <div class="toast">
                    <div class="message">
                        <%= message %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>